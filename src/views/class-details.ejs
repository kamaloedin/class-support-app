<% if (msg.length !== 0) { %>
  <div id="popup" class="alert alert-success alert-dismissible fade show mt-3 d-flex align-items-center " role="alert">
    <div>
      <%= msg %>
    </div>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>
<div class="card mt-3 mb-3">
    <div class="card-header">
      <h2>Class <%= className %></h2>
    </div>
    <div class="card-body">
      <div class="container">
        <div class="row mb-3">
          <div class="col-md-10">
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">No.</th>
                  <th scope="col">NIS</th>
                  <th scope="col">Student Name</th>
                  <th scope="col">Action</th>
                </tr>
              </thead>
              <tbody>
                <% let i = 0; %>
                <% students.forEach(student => { %>
                  <tr>
                    <th scope="row"><%= ++i %></th>
                    <td><%= student.id %></td>
                    <td><%= student.name %></td>
                    <td>
                      <a href="/students/<%= student.id %>" class="btn btn-success badge rounded pill">Details</a>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
        </div>
      </div>
    </div>
  </div>
</div>
  