<div class="card mt-3 mb-3 container">
    <div class="card-header bg-success bg-gradient row align-items-center">
      <h2 class="card-title text-light ms-4 col-md-4 ">Subjects List</h2>
      <div class="col-md-1 ms-auto text-center">
        <% if (roleId === 1 ) { %>
          <a href="/subjects/add-subject-form" class="btn btn-sm btn-success btn-outline-light rounded">Add</a>
        <% } %>
      </div>
    </div>
    <div class="card-body">
      <div class="container">
        <div class="row mb-3">
            <% if (errorMsg.length !== 0) { %>
                <div id="popup" class="alert alert-danger alert-dismissible fade show mt-3 d-flex align-items-center " role="alert">
                  <div>
                    <%= errorMsg %>
                  </div>
                  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
              <% } %>
            <% if (msg.length !== 0) { %>
                <div id="popup" class="alert alert-success alert-dismissible fade show mt-3 d-flex align-items-center " role="alert">
                  <div>
                    <%= msg %>
                  </div>
                  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
              <% } %>
          <div class="col-md-10">
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">No.</th>
                  <th scope="col">Code</th>
                  <th scope="col">Subject Name</th>
                  <th scope="col">Action</th>
                </tr>
              </thead>
              <tbody>
                <% let i = 0; %>
                <% subjects.forEach(subject => { %>
                  <tr>
                    <th scope="row"><%= ++i %></th>
                    <td>SU0<%= subject.id %></td>
                    <td><%= subject.name %></td>
                    <% if (roleId === 1) { %>
                        <td>
                        <form action="/subjects?_method=DELETE" method="post">
                          <input type="hidden" name="id" value="<%= subject.id %>">
                          <button class="btn btn-danger badge rounded pill" onclick="return confirm('Are you sure you want to delete this subject?')">Delete</button>
                        </form>
                        </td>
                    <% } %>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
    